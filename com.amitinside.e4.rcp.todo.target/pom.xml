<?xml version="1.0" encoding="UTF-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>parent</artifactId>
    <groupId>com.example.e4.rcp</groupId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../com.amitinside.e4.rcp.parent/pom.xml</relativePath>
  </parent>
  <groupId>com.amitinside.e4.rcp</groupId>
  <artifactId>com.amitinside.e4.rcp.todo.target</artifactId>
  <!-- Release version goes here. -->
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <build>
	<plugins>
		<!-- attach the .target file definition to is artifact so it can be referred 
			to below in the target-platform-configuration -->
		<plugin>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>build-helper-maven-plugin</artifactId>
			<version>1.3</version>
			<executions>
				<execution>
					<id>attach-artifacts</id>
					<phase>package</phase>
					<goals>
						<goal>attach-artifact</goal>
					</goals>
					<configuration>
						<artifacts>
							<artifact>
								<file>eclipse4rcp.target</file>
								<type>target</type>
								<classifier>eclipse4rcp</classifier>
							</artifact>
						</artifacts>
					</configuration>
				</execution>
			</executions>
		</plugin>
    </plugins>
  </build>
</project>
